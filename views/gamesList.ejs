<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/header.css" />
    <link rel="stylesheet" href="/gamesList.css" />
    <link rel="stylesheet" href="/gameCard.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>

    <main>
      <header>
        <h1>Games</h1>
      </header>

      <section>
        <ul>
          <% storage.forEach((game, index) => { %>
          <li>
            <a href="/games/<%= index %>"
              ><%- include('./partials/gameCard.ejs', {game:game}) %></a
            >
            <% }) %>
          </li>
        </ul>
      </section>
    </main>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
